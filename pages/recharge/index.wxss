.disl {
    margin-top: 50rpx;
    padding: 20px;
}

.pldh {
    display: inline-block;
    width: 43%;
    margin: 10rpx 2%;
    border: 6rpx solid #dedede;
    border-radius: 10rpx;
    padding: 20rpx 0;
    position: relative;
}

.renmb {
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
}

.quan {
    font-size: 28rpx;
    text-align: center;
    color: orangered;
}

.smwz {
    text-align: center;
    margin-top: 150rpx;
    position: relative;
    height: 200rpx;
}

.smgw {
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #70be68;
    color: #ffffff;
    border-radius: 20rpx;
    font-size: 36rpx;
    font-weight: 500;
    position: absolute;
    left: 45%;
    margin-left: -40%;
}

.actss {
    border: 6rpx solid #70be68!important;
    color: #70be68;
    position: relative;
}

.pldh image {
    display: none;
}

.pldh.actss image {
    display: block;
    position: absolute;
    right: -2rpx;
    top: 0;
    width: 52rpx;
    height: 42rpx;
}