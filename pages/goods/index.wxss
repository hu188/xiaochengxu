.search{
    width: 100%;
    /*height: 45px;*/
    height: 90rpx;
    display: flex;
    display: -webkit-box;
    flex-direction: row;
    -webkit-box-orient: horizontal;
    align-items: center;
    -webkit-box-align: center;
    justify-content: space-between;
    background: #f2f2f2;
    box-sizing: border-box;
    padding: 5px 10px;
    border-bottom: 1px solid #f5f5f5;
}
.search:after{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D7D6DC;
    color: #D7D6DC;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.search-bar{
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 5px;
  flex: 1;
  -webkit-box-flex: 1;
  padding:2px 3px;
}
.search-bar i{
    display: inline-block;
    vertical-align: middle;
    font: normal normal normal 14px/1 "weui";
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    color: #b2b2b2;
}
.search-bar i:before{
  content: "\EA0E";
  display: inline-block;
  margin-left: .2em;
  margin-right: .2em;
}
.search .cancel{
  width: 40px;
  text-align: right;
  color: #EF4746;
}
.search-bar input{
   text-align: left;
    flex: 1;
    border-radius: 5px;
    background-color: #fff;
    color:#b2b2b2;
}


