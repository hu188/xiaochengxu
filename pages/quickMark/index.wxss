.p{
  width: 300px;
  height: 300px;
  position: fixed;
  top:100px;
  margin: 45px
}
.txt{
  width: 180px;
  height: 150px;
  position: fixed;
  top: 420px;
  left:110px;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: darkgrey;
  z-index: 9000;
  opacity: 0.7;
}
 
.modalText {
   font-size: 32rpx;
   color: chocolate;
   margin-bottom: 30rpx;
}

.modalDlg{
  width: 580rpx;
  height: 160rpx;
  position: fixed;
  padding-top: 30rpx;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

/** 修改button默认的点击态样式类**/
.modalButton {
   width:100%;
   font-family: fantasy;
   border-radius: 0;
}

.modalButton::after {
   border:none;
   border-radius: 0;
}